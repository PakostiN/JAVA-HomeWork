import java.util.Scanner;

public class Zad6 {

	public static void main(String[] args) {
		Scanner test = new Scanner (System.in, "UTF-8");
		System.out.println("Напишете програма, която чете от конзолата радиуса “r” на кръг и отпечатва неговия периметър и лице.");
		double r = test.nextDouble();
		double result = 0;
		result = 2*3.14*r;
		System.out.println("Периметърът на дадената окръжност е : " + result);
		result = 3.14*(r*r);
		System.out.println("Лицето на дадената окръжност е: " + result);
		test.close();
	
	}

}
